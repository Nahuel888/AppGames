<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ezequiel.camisetas.MainActivity"

    android:baselineAligned="false"
    android:weightSum="1"
    android:id="@+id/l1"
    android:background="@drawable/fondo3"
    android:clickable="false">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="898dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="left|top"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="960dp"
        android:layout_height="93dp"
        android:layout_below="@+id/ll"
        android:layout_centerHorizontal="true"
        android:layout_gravity="left|top"
        android:orientation="horizontal"
        android:paddingTop="10dp">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="726dp"
        android:layout_height="83dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ll"
        android:layout_gravity="center_horizontal|bottom">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/pelota2" />

            <TextView

                android:id="@+id/n1"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="N1"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF0000"
                android:textSize="40sp"
                android:textStyle="normal|bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pelota2" />

            <TextView
                android:id="@+id/n2"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="N2"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF0000"
                android:textSize="40sp"
                android:textStyle="normal|bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pelota2" />

            <TextView
                android:id="@+id/n3"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="N3"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF0000"
                android:textSize="40sp"
                android:textStyle="normal|bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pelota2" />

            <TextView
                android:id="@+id/n4"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="N4"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF0000"
                android:textSize="40sp"
                android:textStyle="normal|bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pelota2" />

            <TextView
                android:id="@+id/n5"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="N5"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF0000"
                android:textSize="40sp"
                android:textStyle="normal|bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pelota2" />

            <TextView
                android:id="@+id/n6"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="N6"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF0000"
                android:textSize="40sp"
                android:textStyle="normal|bold" />

        </FrameLayout>

    </LinearLayout>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_above="@+id/tableRow2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:id="@+id/frameLayout4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="19dp"
                android:text="HAY"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36sp"
                android:textStyle="normal|bold" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout5"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_alignEnd="@+id/tableLayout"
            android:layout_alignRight="@+id/tableLayout"
            android:layout_below="@+id/tableLayout"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:layout_marginTop="10dp"
            android:background="@drawable/arco4">

            <TextView
                android:id="@+id/total"
                android:layout_width="51dp"
                android:layout_height="41dp"
                android:layout_gravity="top|center"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF0000"
                android:textSize="40sp"
                android:textStyle="normal|bold" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/linearLayout2"
            android:layout_alignStart="@+id/linearLayout2"
            android:layout_alignTop="@+id/linearLayout9"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:text="CAMISETAS EN TOTAL"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/background_light"
                android:textSize="36sp"
                android:textStyle="normal|bold" />

        </FrameLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_above="@+id/tableRow3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:id="@+id/frameLayout7"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="10dp"
            android:background="@drawable/arco4">

            <TextView
                android:id="@+id/camMessi"
                android:layout_width="51dp"
                android:layout_height="41dp"
                android:layout_gravity="top|center"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF0000"
                android:textSize="40sp"
                android:textStyle="normal|bold" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/tableLayout"
            android:layout_alignRight="@+id/tableLayout"
            android:layout_below="@+id/tableLayout"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout2"
                android:layout_marginTop="37dp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="19dp"
                android:text="SON DE MESSI"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36sp"
                android:textStyle="normal|bold" />
        </FrameLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:id="@+id/frameLayout9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout11"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="19dp"
                android:text="¿CUÁNTAS SON DE RONALDO?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="36sp"
                android:textStyle="normal|bold" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout11"
            android:layout_width="110dp"
            android:layout_height="63dp"
            android:layout_alignLeft="@+id/linearLayout2"
            android:layout_alignStart="@+id/linearLayout2"
            android:layout_alignTop="@+id/linearLayout9"
            android:layout_marginTop="10dp"
            android:background="@drawable/arco4">

            <TextView
                android:id="@+id/camRonaldo"
                android:layout_width="51dp"
                android:layout_height="41dp"
                android:layout_gravity="top|center"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF0000"
                android:textSize="40sp"
                android:textStyle="normal|bold" />

        </FrameLayout>
    </TableRow>

    <Button
        android:id="@+id/btncorregir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ll"
        android:layout_below="@+id/tableRow2"
        android:elevation="24dp"
        android:text="Corregir"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ll"
        android:layout_below="@+id/tableRow"
        android:elevation="24dp"
        android:text="Comenzar"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/tiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ll"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        tools:text="00" />

</RelativeLayout>




