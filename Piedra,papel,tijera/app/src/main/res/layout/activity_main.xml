<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo"
    tools:context="com.example.david.piedrapapeltijera.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/ll1">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@android:drawable/gallery_thumb" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maquina"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@android:drawable/gallery_thumb" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ll2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tijera"
            android:id="@+id/tijera"
            android:layout_weight="1"
            style="@android:style/Widget.Holo.Light.ImageButton" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/papel"
            android:id="@+id/papel"
            android:layout_weight="1"
            style="@android:style/Widget.Holo.Light.ImageButton" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/piedra"
            android:id="@+id/piedra"
            android:layout_weight="1"
            style="@android:style/Widget.Holo.Light.ImageButton" />
    </LinearLayout>

    <Button
        android:text="¡Jugar!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll2"
        android:layout_alignParentEnd="true"
        android:id="@+id/jugar"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        style="@android:style/Widget.Holo.Button"
        android:background="@android:color/holo_orange_dark"
        android:elevation="0dp" />

    <TextView
        android:text="¿PREPARADO PARA JUGAR?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/resultado"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:text="..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resultado"
        android:layout_centerHorizontal="true"
        android:id="@+id/textpc"
        android:textSize="36sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="normal|bold" />

    <Button
        android:text="Revancha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reset"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        style="@android:style/Widget.Holo.Button"
        android:background="@android:color/holo_red_dark"
        android:layout_above="@+id/ll2"
        android:layout_alignParentStart="true" />
</RelativeLayout>
